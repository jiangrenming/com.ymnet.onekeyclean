<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@color/white" >
    <View
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_divide_color"/>
    <TextView
        android:layout_marginTop="@dimen/default_10dp"
        android:layout_marginBottom="@dimen/default_10dp"
        android:id="@+id/btn_bottom_delete"
        android:layout_width="match_parent"
        android:layout_height="30dip"
        android:layout_centerInParent="true"
        android:background="@drawable/file_management_bottom_delete_bg_selector"
        android:gravity="center"
        android:clickable="true"
        android:text="@string/file_delete"
        android:textSize="14sp"
        android:layout_marginLeft="40dp"
        android:layout_marginRight="40dp"
        android:textColor="@color/white" />

</RelativeLayout>