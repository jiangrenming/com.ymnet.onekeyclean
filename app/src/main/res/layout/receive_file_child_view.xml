<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
                android:background="#fff"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:gravity="center"
              >

    <RelativeLayout
        android:id="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="65dp"
        android:paddingLeft="15dp"
        android:paddingRight="15dp"
        >

        <ImageView
            android:layout_marginTop="5dp"
            android:gravity="center"
            android:id="@+id/iv_file_icon"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginBottom="5dp"
            android:layout_marginRight="5dp"
            android:src="@mipmap/icon_launcher"/>

        <TextView
            android:id="@+id/tv_file_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_toRightOf="@id/iv_file_icon"
            android:singleLine="true"
            android:text="@string/txtfilename"
            android:textColor="@color/black"
            android:textSize="@dimen/sp16"/>

        <TextView
            android:id="@+id/tv_file_size"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentBottom="true"
            android:layout_marginBottom="15dp"
            android:layout_toRightOf="@id/iv_file_icon"
            android:text="@string/filesize"
            android:textColor="@color/gray40"
            android:textSize="@dimen/sp12"/>

        <ImageView
            android:id="@+id/iv_file_state"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:padding="5dp"
            android:src="@drawable/checkbox_bg"/>

    </RelativeLayout>

    <View
        android:layout_alignBottom="@+id/aa"
        android:layout_width="match_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_divide_color"
        />

</RelativeLayout>