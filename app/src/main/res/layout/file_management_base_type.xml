<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="35dp"
    android:background="@color/main_divide_color"
    android:orientation="vertical" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="0.5dp"
        android:background="#f5f5f5"
        android:orientation="horizontal">
    <TextView
        android:id="@+id/tv_file_management"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:clickable="true"
        android:paddingBottom="10dp"
        android:paddingLeft="10dp"
        android:paddingTop="10dp"
        android:text="@string/file_manager"
        android:textColor="@color/main_blue_new"
        android:textSize="14sp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginLeft="10dp"
        android:layout_marginRight="10dp"
        android:text="@string/shadown"
        android:textColor="@color/poxian3"
        android:textSize="14sp" />

    <TextView
        android:id="@+id/tv_file_type"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_weight="1"
        android:text="@string/pic"
        android:textColor="@color/qr_scan_menu_back"
        android:textSize="14sp" />

    <ImageView
        android:id="@+id/iv_top_loading"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center_vertical"
        android:layout_marginRight="15dp"
        android:background="@drawable/about_update_loading"
        android:contentDescription="@null"
        android:visibility="gone" />
    </LinearLayout>

</LinearLayout>