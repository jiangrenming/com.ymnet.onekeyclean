<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical">

    <View
        android:layout_width="fill_parent"
        android:layout_height="0.5dp"
        android:background="@color/main_divide_color" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="50dp"
        android:background="@color/main_divide_color"
        android:orientation="horizontal">

        <Button
            android:id="@+id/dialog_btn1"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="right"
            android:layout_marginRight="0.5dp"
            android:layout_weight="1.0"
            android:background="@drawable/dialog_btn_bg"
            android:text="@string/no_zh"
            android:textColor="@color/dialog_text_color_cancel"
            android:textSize="@dimen/dialog_btn_text_size" />

        <Button
            android:id="@+id/dialog_btn0"
            android:layout_width="0.0dip"
            android:layout_height="match_parent"
            android:layout_gravity="left"
            android:layout_weight="1.0"
            android:background="@drawable/dialog_btn_bg"
            android:text="@string/clear"
            android:textColor="@color/diaglog_text_color"
            android:textSize="@dimen/dialog_btn_text_size" />
    </LinearLayout>
</LinearLayout>