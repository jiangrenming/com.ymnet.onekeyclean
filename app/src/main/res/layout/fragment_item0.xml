<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    >

    <RelativeLayout
        android:id="@+id/rl_home_head"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_alignParentTop="true"
        android:background="@color/main_blue_new1"
        android:gravity="center">
        <!--android:background="@color/main_blue_new1"-->

        <LinearLayout
            android:id="@+id/ll_head_content"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/ll_number"
                android:layout_width="match_parent"
                android:layout_height="196dp"
                android:gravity="center_vertical"
                android:orientation="horizontal">

                <com.ymnet.onekeyclean.cleanmore.customview.ProgressWheel
                    android:id="@+id/pw_memory_size"
                    android:layout_width="150dp"
                    android:layout_height="150dp"
                    android:layout_margin="20dp"
                    app:barColor="#fff"
                    app:barLength="5dp"
                    app:barWidth="8dp"
                    app:circleColor="#3097fe"
                    app:contourColor="#3097fe"
                    app:contourSize="5dp"
                    app:delayMillis="600"
                    app:rimColor="#45A3FE"
                    app:rimWidth="8dp"
                    app:spinSpeed="5dp"
                    app:textColor="#fff"
                    app:textSize="20sp"/>

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:orientation="vertical">

                    <TextView
                        android:layout_marginBottom="25dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/phone_memory_size"
                        android:textColor="#fff"
                        android:textSize="16sp"/>

                    <TextView
                        android:id="@+id/tv_memory_size_desc"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="@string/tv_memory_size_desc"
                        android:textColor="#fff"
                        android:textSize="18sp"/>
                </LinearLayout>

            </LinearLayout>

            <TextView
                android:id="@+id/tv_junk_state"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginBottom="18dp"
                android:text="@string/tv_junk_desc"
                android:textColor="#fff"
                android:textSize="16sp"/>

            <Button
                android:id="@+id/pb_ram_prompt"
                android:layout_width="120dp"
                android:layout_height="wrap_content"
                android:layout_marginBottom="25dp"
                android:background="@drawable/home_btn_bg_selector"
                android:gravity="center"
                android:paddingBottom="10dp"
                android:paddingLeft="25dp"
                android:paddingRight="25dp"
                android:paddingTop="10dp"
                android:text="@string/tv_junk_clean"
                android:textColor="@color/white"
                android:textSize="16dp"
                />
        </LinearLayout>

    </RelativeLayout>

</RelativeLayout>