<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="wrap_content"
              android:background="@color/white"
              android:orientation="horizontal">

    <RelativeLayout
        android:id="@+id/rl_home_item"
        android:layout_width="match_parent"
        android:layout_height="@dimen/dp80"
        android:background="@drawable/dialog_btn_background_selector"
        android:paddingLeft="@dimen/dp12"
        android:paddingRight="@dimen/dp12">

        <ImageView
            android:id="@+id/function_icon"
            android:layout_width="@dimen/dp45"
            android:layout_height="@dimen/dp45"
            android:layout_centerVertical="true"
            android:src="@drawable/wechat_features_icon"/>

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="@dimen/dp12"
            android:src="@drawable/setting_arrow"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginLeft="@dimen/dp15"
            android:layout_toRightOf="@+id/function_icon"
            android:gravity="center_vertical"
            android:orientation="vertical">

            <TextView
                android:id="@+id/tv_function_title"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:text="@string/managementfragment_wechat_clean"
                android:textColor="@color/gray20"
                android:textSize="@dimen/dp17"/>

            <TextView
                android:id="@+id/tv_function_desc"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp4"
                android:text="@string/wechat_statistics_data_small"
                android:textColor="#848484"
                android:textSize="@dimen/dp14"/>
        </LinearLayout>

    </RelativeLayout>
</LinearLayout>