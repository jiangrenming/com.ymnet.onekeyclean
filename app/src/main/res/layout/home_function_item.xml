<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:background="#ffe8ecef"

              android:orientation="vertical">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/bg_gv_selector"
        android:gravity="center"
        android:orientation="vertical"
        android:padding="@dimen/default_40dp">

        <ImageView
            android:id="@+id/iv_item_mainfunction"
            android:layout_width="30dp"
            android:layout_height="30dp"
            android:layout_marginBottom="5dp"
            android:src="@drawable/qq_features_icon"/>

        <TextView
            android:id="@+id/tv_item_mainfunction"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="QQ清理"
            android:textColor="#000"
            android:textSize="16sp"/>
    </LinearLayout>
</LinearLayout>