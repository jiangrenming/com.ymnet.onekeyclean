<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/picture_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/list_item_click"
    android:descendantFocusability="blocksDescendants">

    <ImageView
        android:id="@+id/picture_img"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="@drawable/image_item_griw_default"
        android:contentDescription="@null"
        android:scaleType="centerCrop"
        android:src="@drawable/image_item_griw_default" />

    <CheckBox
        android:id="@+id/picture_checked"
        style="@style/File_Item_Checkbox"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom|right"
        android:gravity="center"
        android:padding="10dp" />

</FrameLayout>
