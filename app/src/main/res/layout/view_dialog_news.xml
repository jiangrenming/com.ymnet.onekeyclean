<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              android:id="@+id/ll_dialog"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:layout_gravity="center"
              android:gravity="center"
              android:orientation="vertical">


    <RelativeLayout
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:gravity="center"
        android:padding="10dp"
        android:background="@drawable/dialog_bg_shape" >
        <!--android:background="@drawable/dialog_bg_shape"-->

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <RelativeLayout
                android:id="@+id/rl_clean_result"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:gravity="center_vertical"
                >

                <LinearLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:orientation="horizontal">

                    <RelativeLayout
                        android:orientation="vertical"
                        android:id="@+id/iv_bingo"
                        android:layout_width="@dimen/default_50dp"
                        android:layout_height="@dimen/default_50dp"
                        android:gravity="center"
                        android:layout_marginRight="5dp"
                        >

                        <ImageView
                            android:layout_width="30dp"
                            android:layout_height="30dp"
                            android:src="@drawable/bingo_white"
                            />
                    </RelativeLayout>

                    <TextView
                        android:id="@+id/tv_clean_result"
                        android:layout_width="wrap_content"
                        android:layout_height="@dimen/default_50dp"
                        android:layout_marginLeft="5dp"
                        android:gravity="center_vertical"
                        android:text="@string/toast_clean_result"
                        android:textColor="#fff"
                        android:textSize="16sp"/>
                    <!--android:textColor="#3097fd"-->

                </LinearLayout>

                <ImageView
                    android:id="@+id/iv_arrow_result"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/flash_arrow_white_anim"
                    />
            </RelativeLayout>
        </FrameLayout>

        <FrameLayout
            android:layout_width="280dp"
            android:layout_height="72dp">

            <RelativeLayout
                android:id="@+id/rl_leaninto_home"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_gravity="center_vertical"
                android:gravity="center_vertical"
                android:visibility="gone">

                <TextView
                    android:id="@+id/tv_head2"
                    android:layout_width="wrap_content"
                    android:layout_height="30dp"
                    android:layout_marginLeft="5dp"
                    android:gravity="center"
                    android:text="@string/leadinto_home"
                    android:textColor="#fff"
                    android:textSize="16sp"/>

                <ImageView
                    android:id="@+id/iv_arrow_head2"
                    android:layout_width="20dp"
                    android:layout_height="20dp"
                    android:layout_alignParentRight="true"
                    android:layout_centerVertical="true"
                    android:src="@drawable/flash_arrow_white_anim"
                    />
            </RelativeLayout>

        </FrameLayout>

    </RelativeLayout>

    <RelativeLayout
        android:id="@+id/rl_morefunction"
        android:layout_width="280dp"
        android:layout_height="72dp"
        android:background="@drawable/dialog_bottom_bg_shape"
        android:gravity="center"
        android:padding="10dp"
        >
        <!--android:background="@drawable/dialog_bottom_bg_shape"-->

        <ImageView
            android:id="@+id/iv_foot"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_centerVertical="true"
            android:layout_marginRight="5dp"
            android:scaleType="fitXY"
            android:src="@mipmap/icon_launcher"/>

        <TextView
            android:id="@+id/tv_foot"
            android:layout_width="140dp"
            android:layout_height="wrap_content"
            android:layout_centerVertical="true"
            android:layout_marginLeft="5dp"
            android:layout_toRightOf="@+id/iv_foot"
            android:gravity="center_vertical"
            android:singleLine="true"
            android:text="@string/more_news"
            android:textColor="#3097fd"
            android:textSize="16sp"/>

        <ImageView
            android:id="@+id/iv_arrow_foot"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:src="@drawable/flash_arrow_grey_anim"/>
    </RelativeLayout>
</LinearLayout>